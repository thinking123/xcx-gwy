<template>
  <div class="LearningFloat external-cls" @click="onNav">
    <image src="icon_inlearning@3x" />
    <span class="text">
      {{ text }}
    </span>
    <span class="time"> {{ time }}分钟 </span>
  </div>
</template>
<script>
import wepy from '@wepy/core';
import { getImgUrlEx } from '@/common/utils';
import { navToPage } from '@/common/navUtils';

wepy.component({
  data: {
    icon: 'icon_inlearning@3x'
  },
  externalClasses: ['external-cls'],
  props: {
    text: String,
    time: String
  },
  events: {},
  computed: {},
  methods: {
    onNav() {
      navToPage('/pages/section1/timer', {
        startTime: new Date().getTime(),
        endTime: new Date().getTime() + 1000 * 3600
      });
    }
  },
  onLoad() {
    this.icon = getImgUrlEx(this.icon);
  }
});
</script>
