.CCircleTimer{
  width: 100%;
  height: 100%;

  background:linear-gradient(360deg,rgba(86,129,172,1) 0%,rgba(1,15,54,1) 100%);
}


.btn-wrap{
  display: flex;
  padding: 0 100rpx;
  justify-content: space-around;
}


.btn{
  width:230rpx;
  height:120rpx;
  border-radius:60rpx;



  font-size:36rpx;
  font-family:PingFangSC-Semibold,PingFangSC;
  font-weight:600;

  line-height:36rpx;

  display: flex;
  align-items: center;
  justify-content: center;

}

.btn--stop{
  background:rgba(255,255,255,1);
  color:rgba(255,0,0,1);
}


.btn--pause{
  background-color: transparent;
  box-shadow:0px 8rpx 16rpx -4rpx rgba(79,172,27,0.3);
  border-radius:60rpx;
  border:2rpx solid rgba(255,255,255,1);
  color:rgba(255,255,255,1);
}


