  .c-fade-down-leave-active,
  .c-fade-left-enter-active,
  .c-fade-left-leave-active,
  .c-fade-right-enter-active,
  .c-fade-right-leave-active {
    transition-property: opacity, transform;
  }

  .c-fade-up-enter,
  .c-fade-up-leave-to {
    transform: translate3d(0, 100%, 0);
    opacity: 0;
  }

  .c-fade-down-enter,
  .c-fade-down-leave-to {
    transform: translate3d(0, -100%, 0);
    opacity: 0;
  }

  .c-fade-left-enter,
  .c-fade-left-leave-to {
    transform: translate3d(-100%, 0, 0);
    opacity: 0;
  }

  .c-fade-right-enter,
  .c-fade-right-leave-to {
    transform: translate3d(100%, 0, 0);
    opacity: 0;
  }

  .c-slide-up-enter-active,
