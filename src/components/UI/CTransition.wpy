  .c-slide-down-enter-active,
  .c-slide-down-leave-active,
  .c-slide-left-enter-active,
  .c-slide-left-leave-active,
  .c-slide-right-enter-active,
  .c-slide-right-leave-active {
    transition-property: transform;
  }

  .c-slide-up-enter,
  .c-slide-up-leave-to {
