<template>
  <div
    v-if="inited"
    class="c-transition custom-class"
    v-bind:class="classes"
    v-bind:style="sty"
    bind:transitionend="onTransitionEnd"
  >
    <slot></slot>
  </div>
</template>
<script>
  import wepy from '@wepy/core'
  import { transition } from '@/mixins/transition';
  wepy.component({
    data: {

    },
    mixins: [transition(true)],
    externalClasses:[
      'enter-class',
      'enter-active-class',
      'enter-to-class',
      'leave-class',
      'leave-active-class',
      'leave-to-class'
    ],
    props:{
      
    },
    events: {

    },
    watch:{
      classes(v){
        console.log('classes : ' , v )
      }
    },
    computed:{
      sty(){
        const {currentDuration , display , customStyle} = this;
        const td = `${currentDuration}ms`
        const res = {
          _webkitTransitionDuration:td,
          transitionDuration:td,
          display:display ? 'initial' : 'none'
        }

        let str = '';
        Object.keys(res).forEach(key=>{
          str += `${key}:${res[key]};`
        })

        if(!!customStyle && customStyle != 'null'){
          str += customStyle;
        }


        console.log('str:' , str)
        return str;
      }
    },
    methods: {

    },
    onLoad () {
      console.log('cls : ' , this.sty , this.cls)
    }
  });
</script>
<style lang="less">
  .c-transition {
