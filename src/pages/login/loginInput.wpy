    .form{
      padding: 0 30rpx;
      margin: 32rpx 30rpx 0;
      background:$white;
      box-shadow:0px 4px 8px 0px rgba(0,0,0,0.05);
      border-radius:16px;
    }
    .submit{
      margin-top: 48rpx;
      font-size: 36rpx;
    }
  }
</style>
