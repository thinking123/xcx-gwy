<script>
  import wepy from '@wepy/core';
  import store from 'store';
  import { getImgUrlEx, isEmptyString, showMsg } from '@/common/utils';
  import { mapGetters , mapState} from '@wepy/x';
  import {navToPage} from '@/common/navUtils';
  import { getupSleepClock, learnTimeAdd } from '@/http/http-business';

  wepy.page({
    store,
    config: {
      navigationBarTitleText: ''
    },
    computed: {
      ...mapGetters(['isSigned', 'user']),
      ...mapState(['nickName']),
      timeTip(){
        if(this.time && this.time.length > 0){
          const time = this.time;

          let v = '';
          if (this.time[0] > 0) {
            v = `${this.time[0]}小时`;
          }
          if (this.time[1] > 0) {
            v += `${this.time[1]}分钟`;
          }

          return v;
        }

        return '去设置';
      }
    },
    data: {
      titleIcons:[
        {
          text:'起床睡觉',
          src:'home_icon_nav01.png'
        },
        {
          text:'学习计时',
          src:'home_icon_nav02.png'
        },
        {
          text:'学习日记',
          src:'home_icon_nav03.png'
        },
        {
          text:'学习计划',
          src:'home_icon_nav04.png'
        }
      ],
      panelIcons:[
        'home_img_huiyuan@3x.png',
        'home_img_kaiming@3x.png',
        'home_img_luntan@3x.png',
        'home_img_fujin@3x.png',
      ],
      getupShow:false,
      getupicon1:'icon_get_up@3x',
      getupicon2:'icon_sleep@3x',
      learnShow:false,

      timeShow:false,
      time:[],
      setTime:[],
      learnContent:'',
      learnTip:''
    },
    methods: {
      handleSign(){
        navToPage('/pages/login/login')
      },
      handleIconText(index){
        switch (index) {
          case 0:
            this.getupShow = true;
            break;
          case 1:
            this.learnShow = true;
            this.learnTip = '';
            this.learnContent = '';
            this.setTime = [];
            this.time = [];
            break;
          case 2:
            navToPage('/pages/section1/learnLog')
            break;
          case 3:
            navToPage('/pages/section1/learnPlan')
            break;
        }
      },
      handleImage(index){
        switch (index) {
          case 0:
            navToPage('/pages/section1/MemberCenter')
            break;
          case 1:
            navToPage('/pages/section1/learnLog')
            break;
          case 2:
            navToPage('/pages/section1/learnLog')
            break;
          case 3:
            navToPage('/pages/section1/nearPage')
            break;
        }
      },
      handleLearnTip(){
        this.timeShow = true;
      },
      handleStartLearn(){
        const verify = () => {
          const t = !!this.time && this.time[0] > 0 || this.time[1] > 0 ;
          if(!isEmptyString(this.learnContent) && t ){
            return true;
          }

          return false;
        }



        if(verify()){
          let totalT = this.time[0] * 60 + this.time[1];
          learnTimeAdd(this.user.id , this.learnContent , totalT).then(res => {
            const t = this.time;
            if(t && t.length == 2){
              const offset = (t[0] * 3600 + t[1] * 60) * 1000
              navToPage('/pages/section1/timer' , {
                startTime:new Date().getTime(),
                endTime:(new Date().getTime() + offset)
              })
            }
          })


        }else{
          showMsg('内容不全');
        }


      },
      handlelearnContent(v){
        this.learnContent = v;
      },
      handlelearnTip(v){

        console.log('handlelearnTip', v);
        // this.learnTip = v;
      },
      hanleTime(v){
        console.log('time:' , v)
        this.setTime = v;
      },
      handleSetTime(){
        this.timeShow = false;
        this.time = this.setTime;
//完成5分钟学习后暂停且提醒结束计时

        if(this.time.length == 2){
          let v = '';
          if (this.time[0] > 0) {
            v = `${this.time[0]}小时`;
          }
          if (this.time[1] > 0) {
            v += `${this.time[1]}分钟`;
          }
          this.learnTip = `完成${v}学习后暂停且提醒结束计时`;
        }


      },
      handleGetup(type){
        getupSleepClock(this.user.id , type).then(res => {
          if(res){
            showMsg(type == 0 ? '起床' : '睡觉');
            this.getupShow = false;
          }
        });
      }
    },
    onShow(){

    },
    created () {
      this.titleIcons = this.titleIcons.map(m=>{
        m.src = getImgUrlEx(m.src)
        return m
      })
      this.panelIcons = this.panelIcons.map(getImgUrlEx)

      this.getupicon1 = getImgUrlEx(this.getupicon1)
      this.getupicon2 = getImgUrlEx(this.getupicon2)

      // navToPage('/pages/section1/nearDetailPage')
    }
  });
</script>
