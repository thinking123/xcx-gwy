        <div class="body">
          <CTimePickerView @change="hanleTime" external-cls="row1" :val="setTime"/>
          <CButton text="确认"  @tap.native="handleSetTime" external-cls="row2"/>
        </div>

      </div>

    </CPopup>
  </div>
