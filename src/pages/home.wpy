      <image v-for="(item , index) in panelIcons"
             @click="handleImage(index)"
             :src="item"/>
    </div>
    <CTabbar/>
    <CPopup  :show="getupShow"
             position="bottom"
             @close="getupShow=false"
             zIndex="999"
             overlay="{{ true }}">
